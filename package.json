{
  "name": "@marcelkloubert/promises",
  "version": "0.0.1",
  "description": "Helpers for promises, which work in Node and the browser.",
  "main": "lib/index.js",
  "funding": {
    "type": "individual",
    "url": "https://marcel.coffee/"
  },
  "scripts": {
    "build": "del lib && tsc",
    "docs": "del docs && typedoc --out docs src",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "sandbox": "nodemon --watch 'sandbox/**/*.ts' --exec node -r ts-node/register --inspect=0.0.0.0:9229 sandbox/index.ts",
    "test": "jest --no-cache"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "./src/setupTests.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkloubert/js-promises.git"
  },
  "keywords": [
    "marcel kloubert",
    "node",
    "nodejs",
    "node js",
    "node-js",
    "browser",
    "browsers",
    "js",
    "javascript",
    "typescript",
    "ts",
    "tsc",
    "helper",
    "helpers",
    "function",
    "functions",
    "promise",
    "promises",
    "retry",
    "retries",
    "timeout",
    "timeouts",
    "worker",
    "workers",
    "workerscript",
    "worker-script",
    "worker script",
    "workerscripts",
    "worker-scripts",
    "worker scripts",
    "async await",
    "async",
    "await",
    "parallel",
    "bluebird",
    "concurrency",
    "concurrencies",
    "concurrently"
  ],
  "author": "Marcel Joachim Kloubert",
  "license": "MIT",
  "files": [
    "CHANGELOG.md",
    "CONTRIBUTE.md",
    "LICENSE",
    "lib",
    "!lib/**/__tests__/**/*",
    "!lib/**/*.map",
    "!lib/**/setupTests.*",
    "README.md"
  ],
  "devDependencies": {
    "@marcelkloubert/tsconfig": "0.1.1",
    "@types/jest": "27.0.2",
    "@types/node": "14.18.16",
    "@types/supertest": "2.0.11",
    "babel-jest": "27.5.1",
    "del-cli": "4.0.1",
    "eslint": "8.14.0",
    "eslint-config-marcel": "0.1.1",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "supertest": "6.2.3",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "tslint": "6.1.3",
    "typedoc": "0.22.15",
    "typescript": "4.6.3"
  }
}
